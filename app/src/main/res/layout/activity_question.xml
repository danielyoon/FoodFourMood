<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="163dp"
        android:text="@string/textview"
        android:textSize="18sp"
        app:fontFamily="@font/aladin"
        app:layout_constraintBottom_toTopOf="@+id/Q1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Q1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/transparent"
        android:text="Choice 1"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/Q3"
        app:layout_constraintEnd_toStartOf="@+id/Q2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/Q2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/transparent"
        android:text="Choice 2"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/Q4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Q1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Q3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/transparent"
        android:text="Choice 3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Q4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Q1" />

    <Button
        android:id="@+id/Q4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/transparent"
        android:text="Choice 4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Q3"
        app:layout_constraintTop_toBottomOf="@+id/Q2" />

</androidx.constraintlayout.widget.ConstraintLayout>